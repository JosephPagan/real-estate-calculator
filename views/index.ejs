                    <input type="text" class="form-control expense" aria-label="Amount (to the nearest dollar)" onchange="calcRepairs()">
                    <span class="input-group-text">.00</span>
                </div>
                <div class="input-group mb-3 grid">
                    <label class="input-label-child">Doors</label>
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control expense" aria-label="Amount (to the nearest dollar)" onchange="calcRepairs()">
                    <span class="input-group-text">.00</span>
                </div>
                <div class="input-group mb-3 grid">
                    <label class="input-label-child">Flooring</label>
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control expense" aria-label="Amount (to the nearest dollar)" onchange="calcRepairs()">
